<h1><%= @album.title %></h1>

<% if @album.tracks.length > 0 %>
<ul>
  <% @album.tracks.each do |track| %>
    <li><a href="<%= track_url(track) %>"><p><%= track.name %></p></a></li>
  <% end %>
</ul>
<% else %>
  <p>No tracks yet on this album</p> 
<% end %>

<h4>Links</h4>
<ul class=>
  <li><a href="<%= new_album_track_url(@album) %>">New track</a></li>
  <li><a href="<%= edit_album_url(@album) %>">Edit album</a></li>
  <li>
    <form action="<%= album_url(@album) %>" method="POST">
      <input type="hidden" name="_method" value="DELETE">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" >
      <input type="submit" value="Destroy Album">
    </form>
  </li>
  <li><a href="<%= band_url(@album.band) %>">Back to <%= @album.band.name %></a></li>
</ul>